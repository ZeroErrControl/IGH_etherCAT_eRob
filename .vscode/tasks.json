{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: gcc build active file",
        "command": "/usr/bin/gcc",
        "args": [
          "-fdiagnostics-color=always",
          "-g",                                    // Debug symbols
          "${file}",                               // Current file being built
          "-o", "${fileDirname}/${fileBasenameNoExtension}",  // Output file without extension
          "-I", "/usr/local/etherlab/include",      // Include EtherCAT headers
          "-L", "/usr/local/etherlab/lib",           // Link EtherCAT library
          "-lethercat"                             // Link EtherCAT library
        ],
        "options": {
          "cwd": "${fileDirname}"                  // Set current working directory
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }